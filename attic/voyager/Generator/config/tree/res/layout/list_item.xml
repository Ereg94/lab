<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:stretchColumns="1">

	<TableRow>
		<TableLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:stretchColumns="0"
			android:gravity="left">
			<TableRow>
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:orientation="horizontal">
					<TextView android:id="@+id/watch_item_code"
						android:text="" android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:paddingLeft="2dip"
						android:textSize="18sp" android:textColor="#ffffff"
						android:textStyle="bold" reqname="id"/>
					<TextView android:id="@+id/watch_item_exchange"
						android:text="" android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:paddingLeft="2dip"
						android:textSize="10sp" android:textColor="#ffffff"
						android:textStyle="normal" />
				</LinearLayout>
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/watch_item_description"
					android:text="" android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:paddingLeft="2dip"
					android:textSize="11sp" />
			</TableRow>
		</TableLayout>

		<TableLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:stretchColumns="0">
			<TableRow>
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:orientation="vertical"
					android:paddingRight="5sp">

					<TextView android:id="@+id/watch_item_ask"
						android:text="" android:layout_height="wrap_content"
						android:layout_width="fill_parent" android:paddingTop="1sp"
						android:gravity="right" android:textSize="10sp" />
					<TextView android:id="@+id/watch_item_price"
						android:text="" android:layout_height="wrap_content"
						android:layout_width="fill_parent" 
						android:gravity="right" android:textSize="18sp"
						android:textStyle="bold" textColor="#ffffff" />
					<TextView android:id="@+id/watch_item_bid"
						android:text="" android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:gravity="right" android:textSize="10sp" />
				</LinearLayout>
			</TableRow>
		</TableLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_gravity="center">
			<ImageView android:id="@+id/watch_item_indicator"
				android:layout_width="12sp" android:layout_height="12sp"
				android:layout_gravity="center" />
		</LinearLayout>

		<TableLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:stretchColumns="0"
			android:paddingLeft="5sp" android:paddingRight="5sp">
			<TableRow>
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:orientation="vertical"
					android:gravity="bottom">

					<TextView android:id="@+id/watch_item_percent"
						android:text="23.45%" android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:layout_gravity="right|bottom" android:textSize="14sp"
						android:paddingTop="16sp" android:textColor="#65d058" />
					<TextView android:id="@+id/watch_item_time"
						android:text="12:33:44" android:layout_height="wrap_content"
						android:layout_width="fill_parent" android:paddingTop="4sp"
						android:layout_gravity="right|bottom" android:textSize="10sp" />
				</LinearLayout>
			</TableRow>
		</TableLayout>
	</TableRow>


</TableLayout>