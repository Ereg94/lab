<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" lang="fr" dir="ltr">


<head>

<title>Solr - uQuery | Demo</title>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="" />
<meta name="description" content="" />
<meta name="robots" content="index, follow" />

<%= include_jquery_javascript %>
<%= include_uquery_javascript %>
<%= include_jquery_stylesheets %>

</head>


<body>

<!-- begin #global : Comment your tag here  -->
<div id="global">

  <div id="left">
    <%=  slide_in_out_block('Page Authority', slider_facet('slider_boost')) %>
    <%=  slide_in_out_block('Age of Site', slider_facet('slider_site_age')) %>
  </div>

  <div id="right">
    <%= text_field_tag :keyword, '', :id => 'keyword' %>
    <%= submit_tag 'Run Report', :id => 'submit-query' %>
    <br />

    <p class="results-informations">
      search results : <b class="results-count"></b>
      (display <b class="results-from"></b> to <b class="results-to"></b>)
    </p>

    <br />
    <div id="pagination" class="pagination"></div>
    <br />

    <div id="results">
      <div id="results-loader">
        <p>Please wait while loading datas...</p>
      </div>
      <div id="results-empty">
        <p>No results.</p>
      </div>
      <div id="results-keyword-require">
        <p>Please enter a keyword.</p>
      </div>
      <div id="results-loop">
        <div class="result">
          <h1 class="title"></h1>
          <p class="summary"></p>
          <p>
            Page Authority :
            <span class="boost"></span> |
            Age of Site :
            <span class="site_age"></span>
            <br />
            <span class="url"></span>
          </p>
        </div>
      </div>
    </div>
    
  </div>

</div>
<!-- end #global -->

</body>


</html>